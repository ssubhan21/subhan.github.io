# EditorConfig is awesome: https://editorconfig.org

# Root configuration
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript files
[*.ts]
indent_size = 2
max_line_length = 120

# HTML files
[*.html]
indent_size = 2
max_line_length = 120

# JSON files
[*.json]
indent_style = space
indent_size = 2

# SCSS files
[*.scss]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

